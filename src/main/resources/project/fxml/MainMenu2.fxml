<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.controllers.hh">
    <stylesheets>
        <URL value="@../styles/generalStyles.css" />
    </stylesheets>

    <center>
        <StackPane alignment="CENTER">
            <ImageView fitWidth="800" fitHeight="400">
                <image>
                    <Image url="@../images/MainBackground.png" />
                </image>
            </ImageView>
            <VBox spacing="10" alignment="CENTER">
                <Text text="Le 6 qui prend" fill="WHITE" />
                <ComboBox fx:id="numPlayersComboBox" promptText="Choisir le nombre de joueurs" />
                <ComboBox fx:id="variantComboBox" promptText="Choisir la variante du jeu" />
                <Button onAction="#startGame" text="Démarrer" />
            </VBox>
        </StackPane>
    </center>

    <top>
        <StackPane padding="10" style="-fx-background-color: rgba(0, 0, 0, 0.7);">
            <children>
                <ImageView fitWidth="200" fitHeight="100">
                    <image>
                        <Image url="@../images/logo.png" />
                    </image>
                </ImageView>
            </children>
        </StackPane>

    </top>

    <right>
        <ImageView fitWidth="250" fitHeight="600">
            <image>
                <Image url="@../images/imageJeu.jpg" />
            </image>
        </ImageView>
    </right>
</BorderPane>